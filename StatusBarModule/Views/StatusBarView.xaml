<UserControl x:Class="StatusBarModule.Views.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StatusBarModule.Views"
             xmlns:icons="clr-namespace:IconsForSzafa;assembly=IconsForSzafa"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button Width="36" Height="36" Background="White" BorderBrush="White" HorizontalAlignment="Right" Command="{Binding OpenSettingsCommand}">
            <icons:SettingsIcon HorizontalAlignment="Right"/>
        </Button>
    </Grid>
</UserControl>
